<div class="container text-center">
  <div class="row">
    <div class="col-xs-12">
      <h1>******** Welcome to the longest word-game !********</h1>
      <h2>Here is your grid :</h2>
      <h2><%= @grid %></h2>
    </div>
  </div>
</div>

<div id="form" class="container text-center">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <form action="/score" class="form-group form-inline">
        <label for="yourtry">Your try</label>
        <input type="text" id="yourtry" class="form-control" name="attempt" placeholder="write down your try">
        <%= hidden_field_tag 'grid', @grid %>
        <%= hidden_field_tag 'start_time', @start_time %>
        <input type="submit" value="Go !" class="btn btn-danger" id="submit">
      </form>
    </div>
  </div>
</div>





